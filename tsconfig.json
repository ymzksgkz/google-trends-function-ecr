{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "inlineSourceMap": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "jest.config.ts"]
}
